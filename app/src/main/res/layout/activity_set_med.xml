<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetMed"
    android:orientation="vertical"
    android:background="@color/aux1"
    android:animateLayoutChanges="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/aux1"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:navigationIcon="@drawable/back2"
            app:title=" ">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Medications"
                android:fontFamily="@font/lato"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/aux4"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgshape"
        android:backgroundTint="@color/aux5"
        android:padding="10dp"
        android:textSize="17sp"
        android:text="Please fill all fields"
        android:fontFamily="@font/lato"
        android:textColor="#F44336"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:animateLayoutChanges="true">
        <LinearLayout
            android:id="@+id/medarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/appbar"
            android:padding="20dp"
            android:orientation="vertical"
            android:animateLayoutChanges="true">
            <EditText
                android:id="@+id/ail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgshape"
                android:backgroundTint="@color/aux5"
                android:padding="10dp"
                android:textSize="17sp"
                android:hint="Ailment/Sickness"
                android:layout_marginBottom="20dp"
                android:textColor="@color/aux4"/>
            <Spinner
                android:id="@+id/mt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@drawable/bgshape"
                android:backgroundTint="@color/aux5"
                android:spinnerMode="dropdown"
                android:textAlignment="viewStart"
                android:layout_marginBottom="20dp"
                />
            <EditText
                android:id="@+id/mn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bgshape"
                android:backgroundTint="@color/aux5"
                android:padding="10dp"
                android:textSize="17sp"
                android:hint="Drug Name"
                android:layout_marginBottom="20dp"
                android:textColor="@color/aux4"/>
            <EditText
                android:id="@+id/dos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bgshape"
                android:backgroundTint="@color/aux5"
                android:padding="10dp"
                android:textSize="17sp"
                android:hint="Drug total Dosage"
                android:inputType="number"
                android:textColor="@color/aux4"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/notarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/appbar"
            app:layout_constraintStart_toEndOf="@id/medarea"
            android:padding="20dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:animateLayoutChanges="true">
            <EditText
                android:id="@+id/dpd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bgshape"
                android:backgroundTint="@color/aux5"
                android:padding="10dp"
                android:textSize="17sp"
                android:hint="Dosage per Day"
                android:inputType="number"
                android:textColor="@color/aux4"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/sd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgshape"
                android:backgroundTint="@color/aux5"
                android:padding="10dp"
                android:textSize="17sp"
                android:hint="Start Date"
                android:layout_marginBottom="20dp"
                android:textColor="@color/aux4"/>

            <TextView
                android:id="@+id/nottime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bgshape"
                android:backgroundTint="@color/aux5"
                android:padding="10dp"
                android:textSize="17sp"
                android:hint="Notification Time (e.g 6:30pm)"
                android:layout_marginBottom="20dp"
                android:textColor="@color/aux4"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:animateLayoutChanges="true">
        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient"
            android:text="Back"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/aux1"
            android:textSize="15sp"
            android:paddingStart="13dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="13dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient"
            android:text="Next"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/aux1"
            android:textSize="15sp"
            android:paddingStart="13dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="13dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end"
            android:gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>